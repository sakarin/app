<% if params[:current_store_id] == 1 %>

    <div class="grid_16" style="margin-left: 0px;margin-right:0px;width: 960px;">
        <div id="body_content">
            <div class="top-box-960"></div>
                <div class="title-960">
                    <h3><%= t("login_as_existing") %></h3>
                    <% if flash[:alert] %>
                        <div class="flash errors"><%= flash[:alert] %></div>
                    <% end %>
                </div>
            <div class="content-960">
                <div id="existing-customer">
                    <% @body_id = 'login' %>

                        <%= hook :login do %>
                            <%= render :partial => 'shared/footballshirt/login' %>
                            <%= t("or") %> <%= link_to t("create_a_new_account"), signup_path %> | <%= link_to t("forgot_password"), new_user_password_path %>
                        <% end %>

                    <%= hook :login_extras %>
                </div>
            </div>
            <div class="footer-960"></div>
        </div>
    </div>

<% else %>
    <div id="existing-customer">
        <div class="page-title"><h3><%= t("login_as_existing") %></h3></div>
        <% if flash[:alert] %>
            <div class="flash errors"><%= flash[:alert] %></div>
        <% end %>

        <% @body_id = 'login' %>
            <div style="padding-left:10px;padding-bottom:5px;">
                <%= hook :login do %>
                    <%= render :partial => 'shared/login' %>
                    <%= t("or") %> <%= link_to t("create_a_new_account"), signup_path %> | <%= link_to t("forgot_password"), new_user_password_path %>
                <% end %>
            </div>
    </div>
    <%= hook :login_extras %>
<% end %>

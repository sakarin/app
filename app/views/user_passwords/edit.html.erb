


<div class="grid_16" style="margin-left: 0px;margin-right:0px;width: 960px;">
  <div id="body_content">
    <div class="top-box-960"></div>
    <% @body_id = 'signup' %>
    <div class="title-960">
      <%= render "shared/error_messages", :target => @user %>
      <h1><%= t(:change_my_password) %></h1>
    </div>
    <div class="content-960">
      <div id="new-customer">
        <%= form_for @user, :url => user_password_path, :html => {:method => :put} do |f| %>
            <p>
              <%= f.label :password %><br />
              <%= f.password_field :password %><br />
            </p>
            <p>
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation %><br />
            </p>
            <%= f.hidden_field :reset_password_token %>
            <%= f.submit t("update_password") %>
        <% end %>
      </div>

    </div>
    <div class="footer-960"></div>
  </div>
</div>
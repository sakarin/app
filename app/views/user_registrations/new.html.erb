<% if params[:current_store_id] == 1 %>

    <div class="grid_16" style="margin-left: 0px;margin-right:0px;width: 960px;">
        <div id="body_content">
            <div class="top-box-960"></div>
                <% @body_id = 'signup' %>
                <div class="title-960">
                    <h1><%= t("new_customer") %></h1>
                </div>
            <div class="content-960">
                <div id="new-customer">
                    <%= hook :signup do %>

                        <%= form_for(:user, :url => registration_path(@user)) do |f| %>

                            <%= hook :signup_inside_form do %>
                                <%= render 'shared/footballshirt/user_form', :f => f %>
                                <p><%= submit_tag t("create"), :class => 'button primary' %></p>
                            <% end %>

                        <% end %>
                        <%= t("or") %> <%= link_to t("login_as_existing"), login_path %>
                    <% end %>
                </div>
                <%= hook :login_extras %>
            </div>
            <div class="footer-960"></div>
        </div>
    </div>
<% else %>
    <% @body_id = 'signup' %>

    <%= render "shared/error_messages", :target => @user %>

    <div id="new-customer">
      <h2><%= t("new_customer") %></h2>

      <%= hook :signup do %>

        <%= form_for(:user, :url => registration_path(@user)) do |f| %>

          <%= hook :signup_inside_form do %>
            <%= render 'shared/user_form', :f => f %>
            <p><%= submit_tag t("create"), :class => 'button primary' %></p>
          <% end %>

        <% end %>
        <%= t("or") %> <%= link_to t("login_as_existing"), login_path %>
      <% end %>

    </div>

    <%= hook :login_extras %>
<% end %>
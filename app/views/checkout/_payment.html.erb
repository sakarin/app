<fieldset id="payment">
  <legend>Payment Information</legend>

    <p>
      <label>

        <input checked="checked" id="order_payments_attributes__payment_method_id_<%= params[:payment_method_id] %>" name="order[payments_attributes][][payment_method_id]" type="radio" value="<%= params[:payment_method_id]  %>">
        Payment
      </label>
    </p>


    <ul id="payment-methods">
        <li id="payment_method_<%= params[:payment_method_id] %>" style="display: block; ">
          <fieldset>

            <%= image_tag("btn_xpressCheckout.gif")  %>
          </fieldset>
        </li>
    </ul>
    <br style="clear:both;">

</fieldset>

<hr class="space" />
<div class="form-buttons">
  <input type="submit" class="continue button primary" value="<%=t("save_and_continue") %>" />
</div>
